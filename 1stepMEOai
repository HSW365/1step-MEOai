app/actions.js – AI Commands Screen
// app/actions.js
import React, { useState } from 'react';
import { View, Text, StyleSheet, ScrollView, ActivityIndicator } from 'react-native';
import CommandInput from '../components/CommandInput';
import { runMEOAICommand } from '../lib/ai';

export default function ActionsScreen() {
  const [lastCommand, setLastCommand] = useState("");
  const [response, setResponse] = useState("");
  const [loading, setLoading] = useState(false);

  const handleCommand = async (input) => {
    try {
      setLoading(true);
      setLastCommand(input);
      const aiReply = await runMEOAICommand(input);
      setResponse(aiReply);
    } catch (e) {
      setResponse("Something went wrong talking to MEOAI. Try again in a moment.");
    } finally {
      setLoading(false);
    }
  };

  return (
    <View style={styles.wrapper}>
      <ScrollView
        style={styles.container}
        contentContainerStyle={{ padding: 18, paddingBottom: 100 }}
      >
        <Text style={styles.heading}>Actions · 1STEP</Text>
        <Text style={styles.sub}>
          Type what you want done. MEOAI will translate it into steps, routines, or ideas.
        </Text>

        {lastCommand ? (
          <View style={styles.block}>
            <Text style={styles.label}>Last Command</Text>
            <Text style={styles.command}>{lastCommand}</Text>
          </View>
        ) : null}

        <View style={styles.block}>
          <Text style={styles.label}>MEOAI Response</Text>
          {loading ? (
            <ActivityIndicator color="#ffb300" />
          ) : (
            <Text style={styles.response}>
              {response || "Ask me anything about your day, content, money moves, or systems."}
            </Text>
          )}
        </View>
      </ScrollView>

      <View style={styles.inputBar}>
        <CommandInput onSubmit={handleCommand} />
      </View>
    </View>
  );
}

const styles = StyleSheet.create({
  wrapper: {
    flex: 1,
    backgroundColor: '#000',
  },
  container: {
    flex: 1,
  },
  heading: {
    color: '#fff',
    fontSize: 20,
    fontWeight: '800',
    marginBottom: 6,
  },
  sub: {
    color: '#aaa',
    fontSize: 13,
    marginBottom: 18,
  },
  block: {
    marginBottom: 18,
  },
  label: {
    color: '#777',
    fontSize: 11,
    marginBottom: 4,
    textTransform: 'uppercase',
  },
  command: {
    color: '#fff',
    fontSize: 14,
    fontWeight: '600',
  },
  response: {
    color: '#ddd',
    fontSize: 13,
    lineHeight: 19,
  },
  inputBar: {
    padding: 10,
    backgroundColor: '#000',
    borderTopColor: '#111',
    borderTopWidth: 1,
  },
});

