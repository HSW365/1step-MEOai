module.exports = function (api) {
  api.cache(true);
  return {
    presets: ['babel-preset-expo'],
    plugins: ['expo-router/babel'],
  };
};

3. AI ENGINE (MEOAI PLACEHOLDER)

Create folder lib, then file lib/ai.js:

// lib/ai.js
// Simple placeholder for your MEOAI engine.
// Later you can connect this to OpenAI, your own API, etc.

export async function runMEOAICommand(input) {
  // Fake delay
  await new Promise((resolve) => setTimeout(resolve, 600));

  // Very simple mocked behavior for now
  if (!input || input.trim().length === 0) {
    return "Ask me something real. For example: 'Create my morning routine' or 'Generate content ideas for Hoodstar365'.";
  }

  const lower = input.toLowerCase();
  if (lower.includes("routine")) {
    return "Here’s a simple 1STEP morning routine:\n1. 5 minutes gratitude\n2. 10 minutes stretching\n3. 15 minutes focus work\n4. Check today’s top 3 tasks in the Tasks tab.";
  }

  if (lower.includes("content")) {
    return "Content ideas for Hoodstar365:\n• 60-sec story about your cancer journey\n• Clip of studio session\n• Merch fit check with Survivor Museum tees\n• Quick money/credit game gem.";
  }

  return `MEOAI heard: "${input}".\n\nRight now I'm running in demo mode. Soon I'll be wired to real automations, APIs and workflows for your empire.`;
}

4. SHARED COMPONENTS
components/CommandInput.js
// components/CommandInput.js
import React, { useState } from 'react';
import { View, TextInput, TouchableOpacity, Text, StyleSheet } from 'react-native';

export default function CommandInput({ onSubmit, placeholder = "Type your 1STEP command..." }) {
  const [value, setValue] = useState("");

  const handleSend = () => {
    const trimmed = value.trim();
    if (!trimmed) return;
    onSubmit && onSubmit(trimmed);
    setValue("");
  };

  return (
    <View style={styles.container}>
      <TextInput
        style={styles.input}
        value={value}
        placeholder={placeholder}
        placeholderTextColor="#777"
        onChangeText={setValue}
        onSubmitEditing={handleSend}
        returnKeyType="send"
      />
      <TouchableOpacity style={styles.button} onPress={handleSend}>
        <Text style={styles.buttonText}>GO</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flexDirection: 'row',
    backgroundColor: '#111',
    borderRadius: 999,
    paddingHorizontal: 14,
    paddingVertical: 6,
    alignItems: 'center',
    borderWidth: 1,
    borderColor: '#333',
  },
  input: {
    flex: 1,
    color: '#fff',
    paddingVertical: 8,
    paddingRight: 10,
  },
  button: {
    backgroundColor: '#ffb300',
    paddingHorizontal: 16,
    paddingVertical: 8,
    borderRadius: 999,
  },
  buttonText: {
    color: '#000',
    fontWeight: '700',
    fontSize: 12,
  },
});

components/TaskCard.js
// components/TaskCard.js
import React from 'react';
import { View, Text, StyleSheet } from 'react-native';

export default function TaskCard({ title, status = "planned", tag }) {
  const statusColor =
    status === "done" ? "#3ddc84" :
    status === "running" ? "#ffb300" :
    "#666";

  return (
    <View style={styles.card}>
      <View style={styles.row}>
        <Text style={styles.title}>{title}</Text>
        <Text style={[styles.status, { color: statusColor }]}>{status.toUpperCase()}</Text>
      </View>
      {tag && <Text style={styles.tag}>{tag}</Text>}
    </View>
  );
}

const styles = StyleSheet.create({
  card: {
    backgroundColor: '#111',
    padding: 14,
    borderRadius: 12,
    marginBottom: 12,
    borderWidth: 1,
    borderColor: '#222',
  },
  row: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    marginBottom: 4,
  },
  title: {
    color: '#fff',
    fontWeight: '600',
    fontSize: 14,
  },
  status: {
    fontSize: 11,
    fontWeight: '700',
  },
  tag: {
    color: '#999',
    fontSize: 12,
    marginTop: 2,
  },
});

5. EXPO ROUTER LAYOUT & SCREENS
app/_layout.js

This sets up the tab navigation (Dashboard / Actions / Tasks / Settings).

// app/_layout.js
import React from 'react';
import { Tabs } from 'expo-router';
import { Ionicons } from '@expo/vector-icons';
import { StatusBar } from 'expo-status-bar';

export default function RootLayout() {
  return (
    <>
      <StatusBar style="light" />
      <Tabs
        screenOptions={{
          headerStyle: { backgroundColor: '#000' },
          headerTitleStyle: { color: '#fff', fontWeight: '700' },
          headerTintColor: '#fff',
          tabBarStyle: { backgroundColor: '#000', borderTopColor: '#111' },
          tabBarActiveTintColor: '#ffb300',
          tabBarInactiveTintColor: '#777',
        }}
      >
        <Tabs.Screen
          name="index"
          options={{
            title: 'Dashboard',
            tabBarIcon: ({ color, size }) => (
              <Ionicons name="home-outline" size={size} color={color} />
            ),
          }}
        />
        <Tabs.Screen
          name="actions"
          options={{
            title: 'Actions',
            tabBarIcon: ({ color, size }) => (
              <Ionicons name="flash-outline" size={size} color={color} />
            ),
          }}
        />
        <Tabs.Screen
          name="tasks"
          options={{
            title: 'Tasks',
            tabBarIcon: ({ color, size }) => (
              <Ionicons name="list-outline" size={size} color={color} />
            ),
          }}
        />
        <Tabs.Screen
          name="settings"
          options={{
            title: 'Settings',
            tabBarIcon: ({ color, size }) => (
              <Ionicons name="settings-outline" size={size} color={color} />
            ),
          }}
        />
      </Tabs>
    </>
  );
}


Note: This uses @expo/vector-icons which comes with Expo by default.

